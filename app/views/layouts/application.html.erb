<!DOCTYPE html>
<html>
  <head>
    <title>DansGlassPaintings</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <!-- Logo Image Row -->
    <div class="row">
      <div class="col-sm-12">
        <a href="/">
          <%= image_tag 'dans_glass_paintings_logo_small.jpeg', class: 'center-block main-logo', alt: 'Main Logo' %>
        </a>
      </div>
    </div>

    <%= render partial: "layouts/navbar" %>

    <div class="container">
      <!-- Flash Notices -->
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: name %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
